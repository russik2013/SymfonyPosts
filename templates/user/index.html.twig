{% extends 'base.html.twig' %}

{% block title %}Hello Users!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Users</h1>

        {% for user in users %}
            <a href="{{ path('user_single', {'id': user.id}) }}" >User:</a>
            <button onclick='window.location.href="{{ path('post_edit', {'id': user.id}) }}"'>Update</button>
            <button onclick='window.location.href="{{ path('post_delete', {'id': user.id}) }}"'>Delete</button>
            <ul>
                <li>{{ user.name }}</li>
            </ul>

        {% endfor %}

        {% for i in 1..pageCount %}
            <a href="{{ path('posts', {'page': i - 1}) }}" >{{ i }}</a>
        {% endfor %}

    </div>
{% endblock %}
