{% extends 'base.html.twig' %}

{% block title %}Posts!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Posts</h1>

        {% for post in posts %}
            <a href="{{ path('post_show', {'id': post.id}) }}" >Post:</a>
            <button onclick='window.location.href="{{ path('post_edit', {'id': post.id}) }}"'>Update</button>
            <button onclick='window.location.href="{{ path('post_delete', {'id': post.id}) }}"'>Delete</button>
        <ul>
                <li>{{ post.title }}</li>
                <li>{{ post.text }}</li>
                <li>{{ post.description }}</li>
                <li>{{ (post.status == 0 ? "Maybe" : (post.status == 1 ? "Yes" : (post.status == 2 ? "No" : 'default')))  }}</li>
        </ul>
                {% if(post.SeoTitle) %}
            Tags:
                <ul>
                    <li>{{  post.SeoTitle.SeoTitle}}</li>
                    <li>{{  post.SeoTitle.SeoDescription}}</li>
                </ul>
                {% endif %}

        {% endfor %}

    {% for i in 1..pageCount %}
        <a href="{{ path('posts', {'page': i - 1}) }}" >{{ i }}</a>
    {% endfor %}

</div>
{% endblock %}
